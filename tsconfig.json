{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["DOM", "ES6", "es2020", "ESNext.AsyncIterable"],
    "target": "ES5",
    "baseUrl": "src",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
